#include<stdio.h>
int main()
{
    int i;
    for(i=1;i<=4;i++)
    {
         if(i==1)
         {
             printf("      ");
             printf("1\n");
         }
         if(i==2)
         {
             printf("    ");
             printf("1 2\n");
         }
         if(i==3)
         {
             printf("  ");
             printf("1 2 3\n");
         }
         if(i==4)
         {
             printf("1 2 3 4\n");
         }
    }
    return 0;
}
